<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".MainActivity"
    tools:layout_editor_absoluteY="112dp">

    <HorizontalScrollView
        android:id="@+id/scroll_promo_main"
        android:layout_width="match_parent"
        android:layout_height="246dp">

        <LinearLayout
            android:id="@+id/linear1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#DDD9D9">

            <ImageView
                android:id="@+id/promo_main"
                android:layout_width="410dp"

                android:layout_height="wrap_content"
                android:layout_gravity="center"
                app:srcCompat="@drawable/promo_tab5" />

            <ImageView
                android:id="@+id/promo_main1"
                android:layout_width="410dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                app:srcCompat="@drawable/promo2" />

            <ImageView
                android:id="@+id/promo_main2"
                android:layout_width="410dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                app:srcCompat="@drawable/promo3" />
        </LinearLayout>
    </HorizontalScrollView>

        <ScrollView
            android:id="@+id/scroll_promo"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/scroll_promo_main">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#DDD9D9"
                android:orientation="vertical">

                <RelativeLayout
                    android:id="@+id/relative_layout1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#ffffff"
                    android:gravity="left"
                    android:orientation="horizontal"
                    android:onClick="goPromoTab1">

                    <ImageView
                        android:id="@+id/promo_tab_1"
                        android:layout_width="match_parent"
                        android:layout_height="216dp"
                        android:layout_gravity="center"
                        app:srcCompat="@drawable/promo_tab1" />

                    <TextView
                        android:id="@+id/textView10"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/promo_tab_1"
                        android:paddingLeft="10dp"
                        android:text="GWP: SanDisk Cruzer71 32GB USB3.0"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/textView11"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/textView10"
                        android:paddingLeft="10dp"
                        android:paddingBottom="10dp"
                        android:text="Mltics Computer Accessories &amp; Service (Pyramid)" />
                </RelativeLayout>

                <TextView
                    android:id="@+id/space"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="" />

                <RelativeLayout
                    android:id="@+id/relative_layout2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#ffffff"
                    android:gravity="left"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/promo_tab_2"
                        android:layout_width="match_parent"
                        android:layout_height="206dp"
                        android:layout_weight="1"
                        app:srcCompat="@drawable/promo_tab2" />

                    <TextView
                        android:id="@+id/textView12"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/promo_tab_2"
                        android:paddingLeft="10dp"
                        android:text="2x Pals Points + GWP"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/textView13"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/textView12"
                        android:paddingLeft="10dp"
                        android:paddingBottom="10dp"
                        android:text="OKDr (Velocity)" />

                </RelativeLayout>

                <TextView
                    android:id="@+id/space1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="" />

                <RelativeLayout
                    android:id="@+id/relative_layout3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#ffffff"
                    android:gravity="left"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/promo_tab_3"
                        android:layout_width="match_parent"
                        android:layout_height="206dp"
                        android:layout_weight="1"
                        app:srcCompat="@drawable/promo_tab3" />

                    <TextView
                        android:id="@+id/textView15"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/promo_tab_3"
                        android:paddingLeft="10dp"
                        android:text="Buy 1 Free 1"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/textView16"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/textView15"
                        android:paddingLeft="10dp"
                        android:paddingBottom="10dp"
                        android:text="Genki Sushi(Pyramid)" />

                </RelativeLayout>

                <TextView
                    android:id="@+id/space2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="" />

                <RelativeLayout
                    android:id="@+id/relative_layout4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#ffffff"
                    android:gravity="left"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/promo_tab_4"
                        android:layout_width="match_parent"
                        android:layout_height="206dp"
                        android:layout_weight="1"
                        app:srcCompat="@drawable/promo_tab4" />

                    <TextView
                        android:id="@+id/textView17"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/promo_tab_4"
                        android:paddingLeft="10dp"
                        android:text="Mid-Year Sales 2019 - 6 Days Presale"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/textView18"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/textView17"
                        android:paddingLeft="10dp"
                        android:paddingBottom="10dp"
                        android:text="G2000(Pyramid)" />

                </RelativeLayout>
            </LinearLayout>

        </ScrollView>


</RelativeLayout>